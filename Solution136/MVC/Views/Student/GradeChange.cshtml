@{
    ViewBag.Title = "Student";
    var id = ViewBag.Id;
}

<h2 class="page-header">Grade Change Request</h2>
<a href="/Student?id=@Session["studentId"]"><< back</a>

<div id="divStudentEnrollments">

    <label>Course</label>
    <div class="form-group">
        <select class="form-control" data-bind="options: viewModel.studentEnrollmentList,
                            optionsText: 'EnrolledSchedule',
                            optionsValue: 'EnrolledSchedule',
                            optionsCaption: 'Choose a Course...'"></select>
    </div>
    <br />

    <label>Grade Requested</label>
    <select class="form-control" data-bind="">
        <option value="ap">A+</option>
        <option value="a">A</option>
        <option value="am">A-</option>
        <option value="bp">B+</option>
        <option value="b">B</option>
        <option value="bm">B-</option>
        <option value="cp">C+</option>
        <option value="c">C</option>
        <option value="cm">C-</option>
        <option value="dp">D+</option>
        <option value="d">D</option>
        <option value="dm">D-</option>
        <option value="p">P</option>
        <option value="np">NP</option>
    </select> <br />
    <br />

    <label>Reason</label>
    <input class="form-control" type="text" data-bind="" />
    <br />

    <input class="btn btn-primary" value="Update" type="button" />
    <br /><br />

    <div id="divMessage" class="text-success">&nbsp;</div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var enrollmentViewModelObj = new EnrollmentViewModel();
        enrollmentViewModelObj.LoadStudentEnrollmentsForGradeChange("@Session["studentId"]");
    });
</script>