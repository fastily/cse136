@{
    var id = ViewBag.id;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-header">Edit Ta</h2>
<a href="/Admin/TaList"><< back</a>
<div id="divTaContent">
    <label>First Name <span data-bind="text: $data.first"></span></label>
    <input class="form-control" type="text" data-bind="value: $data.first" /><br />

    <label>Last Name</label>
    <input class="form-control" type="text" data-bind="value: $data.last" /><br />

    <label>Type</label>
    <select class="form-control" data-bind="value: $data.type">
        <option value="1">Grad</option>
        <option value="2">Tutor</option>
        <option value="3">Grader</option>
    </select> <br />

    <input class="btn btn-primary" type="button" data-bind="value: 'Update', click: $data.update" />
    <br />
    <div id="divMessage" class="text-success">&nbsp;</div>   
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var taViewModelObj = new TaViewModel();
        taViewModelObj.GetDetail(@id);
    });
</script>