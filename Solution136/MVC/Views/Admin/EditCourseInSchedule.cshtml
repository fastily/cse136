@{
    var id = ViewBag.id;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-header">Edit Instructor</h2>
<a href="/Admin/InstructorList"><< back</a>
<div id="divInstructorContent">
    <label>First Name</label>
    <input class="form-control" type="text" data-bind="value: $data.first" /><br />

    <label>Last Name</label>
    <input class="form-control" type="text" data-bind="value: $data.last" /><br />

    <label>Title</label>
    <input class="form-control" type="text" data-bind="value: $data.title" /><br />

    <input class="btn btn-primary" value="Update" type="button" data-bind="value: 'Update', click: $data.update" />
    <br />
    <div id="divMessage" class="text-success">&nbsp;</div>  
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var viewModel = new InstructorViewModel();
        viewModel.GetDetail(@id);
    });
</script>