@{
    var id = ViewBag.id;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-header">Edit Course In Schedule</h2>
<a href="/Admin/ScheduleList"><< back</a>
<div id="divScheduleContent">
    <table style="width:100%;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Year</th>
                <th>Quarter</th>
                <th>Session</th>
                <th>Course Title</th>
                <th>Time</th>
                <th>Day</th>
                <th>Instructor Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td data-bind="text: id"></td>
                <td data-bind="text: year"></td>
                <td data-bind="text: quarter"></td>
                <td data-bind="text: session"></td>
                <td data-bind="text: course.title"></td>
                <td data-bind="text: $data.time.name"></td>
                <td data-bind="text: $data.day.name"></td>
                <td data-bind="text: $data.instructor.name"></td>
            </tr>
        </tbody>
    </table>
    <hr />
    <label>Time</label>
    <input class="form-control" type="text" data-bind="value: $data.day.name" /><br />

    <label>Day</label>
    <input class="form-control" type="text" data-bind="value: $data.time.name" /><br />

    <label>Instructor</label>
    <input class="form-control" type="text" data-bind="value: $data.instructor.first" /><br />

    <input class="btn btn-primary" value="Update" type="button"/>
    <br />
    <div id="divMessage" class="text-success">&nbsp;</div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var scheduleViewModelObj = new ScheduleViewModel();
        scheduleViewModelObj.GetScheduleById("@ViewBag.Id");
    });
</script>