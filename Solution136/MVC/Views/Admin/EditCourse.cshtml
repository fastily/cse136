@{
    var id = ViewBag.id;
}

<h2 class="page-header">Edit Course</h2>

<div id="divCourseContent">
    <label>Title</span></label>
    <input class="form-control" type="text" data-bind="value: $data.title" /><br />

    <label>Description</label>
    <textarea class="form-control" type="text" data-bind="value: $data.description"></textarea> /><br />

    <label>Level</label>
    <input class="form-control" type="text" data-bind="value: $data.level" /><br />

    <input class="btn btn-primary" value="Update" type="button" />
    <br />
    <div id="divMessage" class="text-success">&nbsp;</div>   
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var courseViewModelObj = new CourseListViewModel();
        courseViewModelObj.GetDetail(@id);
    });
</script>