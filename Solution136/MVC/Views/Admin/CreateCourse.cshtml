@{
    var id = ViewBag.id;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-header">Create Course</h2>
<a href="/Admin/CourseList"><< back</a>
<div id="divCourseContent">
    <label>Title</label>
    <input class="form-control" type="text" data-bind="value: title" /><br />

    <label>Description</label>
    <textarea class="form-control" type="text" data-bind="value: description" ></textarea><br />

    <label>Level</label>
    <select class="form-control" data-bind="value: level">
        <option value="lower">Lower</option>
        <option value="upper">Upper</option>
        <option value="grad">Grad</option>
    </select> <br />
  
    <input class="btn btn-primary" type="button" data-bind="value: 'Add', click: $data.add" />
    <br />
    <div id="divMessage" class="text-success">&nbsp;</div>   
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var courseViewModelObj = new CourseListViewModel();
        courseViewModelObj.Initialize();
    });
</script>