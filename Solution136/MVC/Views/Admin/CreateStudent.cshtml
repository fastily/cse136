@{
    ViewBag.Title = "CreateStudents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="page-header" >Create a new student</h3>
<a href="/Admin/StudentList"><< back</a>
<div id="divStudent">
    <table>
        <tr>
            <td>Id</td>
            <td><input data-bind="value: id" /> (at least 5 chars)</td>
        </tr>
        <tr>
            <td>First</td>
            <td><input data-bind="value: first" /></td>
        </tr>
        <tr>
            <td>Last</td>
            <td><input data-bind="value: last" /></td>
        </tr>
        <tr>
            <td>Email</td>
            <td><input data-bind="value: email" /></td>
        </tr>
        <tr>
            <td></td>
            <td><button data-bind="click: add">Add</button></td>
        </tr>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var studentViewModelObj = new StudentViewModel();
        studentViewModelObj.Initialize();
    });
</script>
